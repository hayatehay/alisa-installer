_diskpart(){
	_disks=()
	_devs=("$(lsblk -o NAME -dn)")
	for i in "${_devs[@]}"
	do
		_disks+=("/dev/${devs[@]}" "${devs[@]}")
	done
	disk=$(whiptail --backtitle "${APPTITLE}" \
			--menu --notags "Select locale(s)" 0 0 0 \
			"${_disks[@]}" 3>&1 1>&2 2>&3)
	startmenu
}

startmenu
